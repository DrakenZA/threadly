<% @all_posts.each do |p| %>
<div id="post<%= p.id%>", class="post format-quote box"">
  <blockquote><%= p.comment%>
</blockquote>
  <div class="details">
    <span class="icon-image"><a href="#">  <%=p.created_at%></a></span>
      <span class="icon-image", style="float : right">
        <% if p.owner != nil %>
        <%=p.owner%>
        <%end%>
    </span>
    <%if current_user != nil && p.owner == current_user.username || current_user != nil && current_user.admin? %>
    <%= button_to "delete" , post_path(:id => p.id), :method => :delete, :remote => true %>
    <%end%>

  </div>

</div>
<%end%>
